{
	/**************************************************************************
    *[BUGFIX] invisible underscore in integrated-term*/
    //"editor.fontFamily": "'Ubuntu Mono', monospace",
    "window.zoomLevel": -1,
	/*************************************************************************/
	
	// deixar visivel a pasta git
	"files.exclude": {
        "**/.git": false
	},
	"git.autofetch": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
    },
    "editor.minimap.enabled": false
}

